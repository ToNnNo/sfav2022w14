{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

    <div class="mb-3">
        <a href="{{ path('article_add') }}" class="btn btn-outline-primary btn-sm">Ajouter</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content | striptags | u.truncate(75, '...', false) }}</td>
                <td></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucun article enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
